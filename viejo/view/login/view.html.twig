{% extends 'base.html.twig' %} {% block body %}
<section>
    <div class="container">
        <div class="row">
            <div class="col s12 m8 l6 offset-m2 offset-l3">
                <div class="card">
                    <div class="card-content black-text">
                        <div class="row">
                            <div class="col s10">
                                <h2>
                                    <span class="card-title">INICIAR SESIÓN</span>
                                </h2>
                            </div>
                            {% if badLogin %}
                            <div class="col s2">
                                <a class="btn-floating btn-large waves-effect waves-light red tooltipped" data-position="bottom" data-delay="50" data-tooltip="{{badLoginText}}">
                                    <i class="material-icons">highlight_off</i>
                                </a>
                            </div>
                            {% endif %}
                        </div>
                        <div class="divider"></div>
                        <div class="contenido-card">

                            <form action="/index.php?controller=login&action=login" class="form-login" method="post" target="_self" accept-charset="UTF-8"
                                autocomplete="on">
                                <div class="input-field">
                                    <input id="usuario" name="user" type="text" class="validate" title="Usuario" required>
                                    <label for="usuario">Usuario</label>
                                </div>
                                <div class="input-field">
                                    <input id="pass" name="pass" type="password" class="validate" title="Contraseña" required>
                                    <label for="pass">Contraseña</label>
                                </div>
                                <div class="buttons center-align">
                                    <button class="btn waves-effect waves-light" type="submit" name="action">Enviar
                                        <i class="material-icons right">send</i>
                                    </button>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
{% endblock %}